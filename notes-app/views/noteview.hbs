<div class="container-fluid">
    <div class="row">
        <div class="col-xs-12">
            {{#if note}}<h3>{{ note.title }}</h3>{{/if}}
            {{#if note}}<p>{{ note.body }}</p>{{/if}}
            <p>Key: {{ notekey }}</p>
        </div>
    </div>
    {{#if notekey}}
    <div class="row">
        <div class="col-xs-12">
            <div class="btn-group">
                <a href="/notes/destroy?key={{notekey}}" class="btn btn-outline-dark" role="button">Delete</a>
                <a href="/notes/edit?key={{notekey}}" class="btn btn-outline-dark" role="button">Edit</a>
            </div>
        </div>
    </div>
    {{/if}}
</div>